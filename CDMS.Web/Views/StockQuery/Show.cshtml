@model  IEnumerable<CDMS.Model.ViewModel.StockQueryViewModel>

@{
    Layout = "~/Views/Shared/_GridForm3.cshtml";
}
<link rel="stylesheet" href='@Url.Content("~/assets/css/styles.css")' />

@using (Ajax.BeginForm("Edit", "Inquiry", new { area = "" }, new AjaxOptions { HttpMethod = "POST", OnBegin = "OnBegin", OnSuccess = "OnSuccess", OnComplete = "OnComplete" }))
{
    @Html.AntiForgeryToken()

    <div class="col-lg-12">
        &nbsp;
    </div>
    <div class="container" id="template_sun2">
        <div id="data_area">
            <div id="datafunc">
                <table class="table table-striped table-bordered">
                    <tr>
                        <td width="13%"><div align="right">產品編號：</div></td>
                        <td width="18%">@ViewBag.ProductID</td>
                        <td width="14%"><div align="right">產品名稱：</div></td>
                        <td width="55%">@ViewBag.ProductName</td>
                    </tr>
                    <tbody></tbody>
                </table>
                <p>替代品：</p>
                <div class="table-responsive">
                    <table class="table table-striped table-bordered">
                        <thead>
                            <tr>
                                <th width="119" height="44" valign="middle"><div align="center">替代品編號</div></th>
                                <th width="134" valign="middle"><div align="center">替代品名稱</div></th>
                                <th width="67" valign="middle"><div align="center">單位</div></th>
                                <th width="99" valign="middle"><div align="center">產品類別</div></th>
                                <th width="89" valign="middle"><div align="center">牌價</div></th>
                                <th width="89" valign="middle"><div align="center">定價</div></th>
                                <th width="99" valign="middle"><div align="center">實價</div></th>
                                <th width="99" valign="middle"><div align="center">業務成本</div></th>
                                <th width="89" valign="middle"><div align="center">倉庫-1</div></th>
                                <th width="79" valign="middle"><div align="center">倉庫-2</div></th>
                                <th width="79" valign="middle"><div align="center">合計</div></th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.Count() > 0)
                            {
                                foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(m => item.ProductID)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(m => item.ProductName)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(m => item.UnitName)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(m => item.ProductKindName)
                                        </td>
                                        <td class="text-right">
                                            @Html.DisplayFor(m => item.ListPrice)
                                        </td>
                                        <td class="text-right">
                                            @Html.DisplayFor(m => item.SetPrice)
                                        </td>
                                        <td class="text-right">
                                            @Html.DisplayFor(m => item.RealPrice)
                                        </td>
                                        <td class="text-right">
                                            @Html.DisplayFor(m => item.BizCost)
                                        </td>
                                        <td class="text-center">
                                            @Html.DisplayFor(m => item.QtyWarehouse1)
                                        </td>
                                        <td class="text-center">
                                            @Html.DisplayFor(m => item.QtyWarehouse2)
                                        </td>
                                        <td class="text-center">
                                            @Html.DisplayFor(m => item.QtyTotal)
                                        </td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr><td colspan="99">@Html.OutputText("TextNoData".ToLocalized())</td></tr>
                            }
                        </tbody>
                    </table>
                </div>
                <!--(start)toolbar(start)-->
                <input type="button" value="@Html.OutputText("ButtonClose".ToLocalized())" onclick="parent.jQuery.fancybox.close();" class="btn btn-inverse" />
                <!--(end)toolbar(end)-->
            </div>
        </div>
    </div>
}

@section scripts{

}