@using System.Configuration;

@{
    var useOfficalLayout =
        string.IsNullOrEmpty(
             ConfigurationManager.AppSettings["UseLayout"]) ?
             false :
             Convert.ToBoolean(ConfigurationManager.AppSettings["UseLayout"]);

    if (useOfficalLayout) {
        Layout = "~/Views/Shared/_Layout2.cshtml";
    } else
    {
        Layout = "~/Views/Shared/_Layout.cshtml";
    }
}
