    <link href='@Url.Content("~/Content/responsive-table.css")' rel="stylesheet" />
    <style>
        body {
            padding-top: 20px;
            padding-bottom: 20px;
        }

        .style1 {color: #FFFFFF;}

        .style2 {color: #000099;}

        .style3 {color: #FF0000;}

        /*停用的選項灰階*/
        select option:disabled {
